@{
    //取得當前購物車所有內容
    var currentCart = MVC.Models.Carts.Operation.GetCurrentCart();
}



<h3>購物車</h3>


@foreach (var cartitem in currentCart)
{
    //依序輸出 : <li><a>可愛橡皮擦 <span>50元 X 2</span></a></li>
    <p>@cartitem.Name <span>@cartitem.Price 元 X @cartitem.Quantity </span></p>
}


@String.Format("共{0}元 ", currentCart.TotalAmount)

<li><a class="btn btn-default text-center" href="#">結帳去</a></li>






