
@{
    ViewBag.Title = "UserPage";
}

<div id="UserData">
    <b-card no-body>
        <b-tabs card>
            <b-tab title="會員資料" active>
                <div class="card card-user">
                    <div class="card-header">
                        <h5 class="card-title">Edit Profile</h5>
                    </div>
                    <div class="card-body" id="UserData">
                        <form>
                            <div class="row">
                                <div class="col-md-6 px-1 ">
                                    <div class="form-group">
                                        <label>Email address</label>
                                        <el-input class="form-control">{{UserData[0].Email}}</el-input>
                                    </div>
                                </div>
                                <div class="col-md-6 px-1 ">
                                    <div class="form-group">
                                        <label>Password</label>
                                        <input class="form-control" placeholder="Password"
                                               v-model="UserData[0].Password">
                                    </div>
                                </div>
                                <div class="col-md-6 px-1 ">
                                    <div class="form-group">
                                        <label>Name</label>
                                        <input type="text" class="form-control" placeholder="Name"
                                               v-model="UserData[0].CustomerName ">
                                    </div>
                                </div>
                                <div class="col-md-6 px-1 ">
                                    <div class="form-group">
                                        <label>Phone</label>
                                        <input type="tel" class="form-control" placeholder="tel"
                                               v-model="UserData[0].Phone ">
                                    </div>
                                </div>
                                <div class="col-md-6 px-1 ">
                                    <div class="form-group">
                                        <label>BirthDay</label>
                                        <input type="date" class="form-control" v-model="UserData[0].BirthDay ">
                                    </div>
                                </div>
                                <div class="update ml-auto mr-auto">
                                    <el-input type="submit" class="btn btn-primary btn-round" v-on:click="Replace">
                                        Update
                                        Profile
                                    </el-input>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </b-tab>
            <b-tab title="Tab 2"><b-card-text>Tab contents 2</b-card-text></b-tab>

        </b-tabs>
    </b-card>
</div>

@section endJS{
    <script src="~/Assest/js/Controller/GetCustomerInfo.js"></script>
}
