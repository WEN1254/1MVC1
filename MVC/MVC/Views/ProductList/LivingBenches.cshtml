

@model IEnumerable<MVC.ViewModels.ProductListViewModels>


<div class="container">
    <div class="product_name">
        <div class="product_name_home">
            <a href="#">Home</a>
            <span>Bestselling Modern Furniture Designs</span>
        </div>
        <p class="wavy">
            <strong style="--i:1;">B</strong>
            <strong style="--i:2;">e</strong>
            <strong style="--i:3;">c</strong>
            <strong style="--i:4;">h</strong>
            <strong style="--i:5;">e</strong>
            <strong style="--i:6;">s</strong>
        </p>
        <div class="storeby">


            <input type="checkbox" id="check_order">
            <span><button for="check_order" onclick="match()">SORT BY BEST MATCH</button></span>
            <div class="match">
                <button> @Html.ActionLink("BESTSELLERS", "LivingBenches", new { sortOrder = ViewBag.QuantityParm })</button>
                <br>
                <button>@Html.ActionLink("NAMES FROM SMALL TO LARGE", "LivingBenches", new { sortOrder = ViewBag.NameSortParm })</button>
                <br>
                <button> @Html.ActionLink("NAMES FROM LARGE TO SMALL", "LivingBenches", new { sortOrder = ViewBag.NamedescSortParm })</button>
                <br>
                <button> @Html.ActionLink("PRICE LOW TO HIGH", "LivingBenches", new { sortOrder = ViewBag.PriceSortParm })</button>
                <br>
                <button> @Html.ActionLink("PRICE HIGH TO LOW", "LivingBenches", new { sortOrder = ViewBag.PricedescSortParm })</button>
                <br>
                <button>@Html.ActionLink("RESET", "LivingBenches", new { sortOrder = ViewBag.ResetParm })</button>
            </div>


        </div>
    </div>
    <div class="product_list row">
        @foreach (var item in Model)
        {
            <div class="col-6 col-md-4 col-xl-3 product_only ">
                <a href="~/ProductInformation/Index" class="product_a">
                    <div class="card">
                        <div class="img">
                            <img src="~/Assest/img/ProductImg/@Html.DisplayFor(modelItem => item.Image)"
                                 alt="圖片說明" class="card-img-top">
                            @*<img src="~/Assest/img/下載.png" alt="">*@
                        </div>
                        <div class="card-body">
                            <strong>
                                <p class="card-title"> @Html.DisplayFor(modelItem => item.ProductName)</p>
                            </strong>
                            <p class="card-text"> $@Html.DisplayFor(modelItem => item.Price)</p>
                            <p> @Html.DisplayFor(modelItem => item.Quantity)  Left</p>
                        </div>
                    </div>
                </a>
            </div>
        }


    </div>
</div>


@section topCSS{
    <link href="~/Assest/css/ProductList.css" rel="stylesheet" />
    <link href="~/Content/Chart.css" rel="stylesheet" />
    <style type="text/css">
    </style>
}
@section endJS{
    <script src="~/Assest/js/ProductList.js"></script>
    <script type="text/javascript"></script>
}


